@model List<int>

@{
    ViewData["Title"] = "Delete Trip";
}
<h2 class="text-center heading">Are you sure you want to delete this comment?</h2>
<a asp-area="" asp-controller="Comments" asp-action="Destroy" asp-route-id="@Model.Last()" asp-route-commentId="@Model.First()" class="btn btn-danger">Confirm Delete</a>
<a class="btn btn-default btn-sm" asp-area="" asp-controller="Trips" asp-action="Details" asp-route-Id="@Model.Last()">Back</a>