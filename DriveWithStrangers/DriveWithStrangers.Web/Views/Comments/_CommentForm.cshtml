@model CommentFormModel

<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({ selector: '#Content' });</script>

<form method="post">

    <div class="form-group">
        <label class="color-blue" asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="color-blue" asp-for="Content"></label>
        <textarea asp-for="Content" rows="20" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Publish Comment</button>
</form>