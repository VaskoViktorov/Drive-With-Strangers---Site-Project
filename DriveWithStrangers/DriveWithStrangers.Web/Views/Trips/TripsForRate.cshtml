@model TripListingViewModel
@{
    ViewData["Title"] = "All Trips";
}

<h2 class="text-center">@ViewData["Title"]</h2>
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<div class="row">
    <div class="col-md-3"></div>

    <form asp-action="Search" method="get">
        <div class="col-md-3">
            <input asp-for="SearchText" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-md-5">
            <label asp-for="SearchInStartLocations"></label>
            <input asp-for="SearchInStartLocations" />
            <label asp-for="SearchInEndLocations"></label>
            <input asp-for="SearchInEndLocations" />
            <label asp-for="SearchInTitles"></label>
            <input asp-for="SearchInTitles" />
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>

</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        @foreach (var trip in Model.Trips)
        {
            <li class="list-group-item text-center">
                <div class="row">
                    <h2>@trip.Title</h2>
                </div>
                <div class="row">
                    <p>Starts on @trip.StartDate from @trip.StartLocation to @trip.EndLocation</p>
                </div>
                <div class="row">
                    @if (trip.PricePerPassenger == 0)
                    {
                        <h5>Price per passenger: <span class="color-green">FREE</span></h5>
                    }
                    else
                    {
                        <h5>Price per passenger: @trip.PricePerPassenger $</h5>
                    }

                </div>
                <div class="row">
                    @if (trip.TakenSeats == trip.TotalSeats)
                    {
                        <h5>Car Space: <span class="color-red">FULL</span></h5>
                    }
                    else
                    {
                        <p>Car Space: @trip.TakenSeats / @trip.TotalSeats</p>
                    }

                </div>
                <a class="btn btn-info" asp-action="DetailsRate" asp-route-id="@trip.Id" asp-route-title="@trip.Title.ToFriendlyUrl()">Read more</a>
            </li>
        }
        </ul>
    </div>
</div>

@if (Model.TotalTrips >= Model.Trips.Count())
{
    <div class="text-center">
        <ul class="pagination">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" asp-route-page="@Model.PreviousPage" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage==i?"active":string.Empty)"><a class="page-link" asp-route-page="@i">@i</a></li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" asp-route-page="@Model.NextPage" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
}
