@model UserViewModel
@{
    ViewData["Title"] = "Edit Profile";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserFullName"></label>
                <input asp-for="@Model.UserFullName" class="form-control" />
                <span asp-validation-for="@Model.UserFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserAge"></label>
                <input asp-for="@Model.UserAge" class="form-control" />
                <span asp-validation-for="@Model.UserAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone" class="form-control" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserProfileImgUrl"></label>
                <input asp-for="@Model.UserProfileImgUrl" class="form-control" />
                <span asp-validation-for="@Model.UserProfileImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword"></label>
                <input asp-for="@Model.NewPassword" class="form-control" />
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword"></label>
                <input asp-for="@Model.CurrentPassword" class="form-control" />
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-sm btn-info">Edit</button>
            <a class="btn btn-sm btn-default" href="/home/index">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}