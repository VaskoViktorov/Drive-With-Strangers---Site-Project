@model UserDetailsServiceModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    
    <div class="col-md-5">
        <h2>
            @Model.Username
            <a class="btn btn-sm btn-info" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Edit Profile</a>
        </h2>
        @if (Model.UserProfileImgUrl == null)
        {
            <img class="user-img" src="https://d2gcv4sxt84gxu.cloudfront.net/assets/default-user-avatars-original-d5efadcf497ea7b3d86c6f8d148d66633a29ce78fa8391af628adf32d9989354.png" alt="profile pic"/>
        }
        else
        {
            <img class="user-img" src="@Model.UserProfileImgUrl" alt="profile pic"/>
        }
        <p>
            <span class="text-bold color-dark-purple">Rate: </span>
            @for (var i = 0; i < (int) Math.Ceiling(Model.UserRate); i++)
            {
                <span class="glyphicon glyphicon-star color-yellow"></span>
            }
            @for (var i = 0; i < 5 - (int) Math.Ceiling(Model.UserRate); i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </p>
        <p><span class="text-bold color-dark-purple">Email: </span><a>@Model.Email</a>
        </p>
        <p>
            <span class="text-bold color-dark-purple">Phone: </span>
            @if (Model.Phone == null)
            {
                <span>No phone provided.</span>
            }
            else
            {
                @Model.Phone
            }
        </p>
        <p><span class="text-bold color-dark-purple">Full Name: </span>@Model.UserFullName</p>
        <p><span class="text-bold color-dark-purple">Age: </span>@Model.UserAge</p>
        <a class="btn btn-sm btn-info" asp-controller="Trips" asp-action="DriverTrips" asp-route-id="@Model.Id">My trips</a>
        <a class="btn btn-sm btn-info" asp-controller="Trips" asp-action="PassagerTrips" asp-route-id="@Model.Id">Joined trips</a>
        <a class="btn btn-sm btn-info" asp-controller="Trips" asp-action="TripsForRate" asp-route-id="@Model.Id">Rate trips</a>
    </div>
</div>