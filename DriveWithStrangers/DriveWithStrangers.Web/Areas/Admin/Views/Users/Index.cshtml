@model AdminUsersListingViewModel
@{
    ViewData["Title"] = "User Administration";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>E-mail</th>
            <th>Roles & Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <form asp-controller="Users" asp-action="AddToRole" method="post">

                        <div class="row">
                            <div class="col-md-9">

                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="@Model.Roles" class="form-control"></select>
                            </div>
                            <div class="col-md-3">
                                <input class="btn btn-sm btn-info" type="submit" value="Add Role" name="add" />
                                <input class="btn btn-sm btn-danger" type="submit" value="Remove Role" name="remove" />
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
