@model ArticleListingViewModel
@{
    ViewData["Title"] = "Blog Articles";
}

<h2 class="text-center">@ViewData["Title"]</h2>
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <ul class="list-group article-list">
            @foreach (var article in Model.Articles)
            {
                <li class="list-group-item text-center">
                    <div class="row">
                        <h2>@article.Title</h2>
                    </div>
                    <div class="row">
                        <img src="@article.ImageUrl" alt="article imge" width="200" />
                    </div>
                    <div class="row">
                        <p>@article.ShortContent</p>
                    </div>
                    <div class="row">
                        <small class="small">published by @article.Author on @article.ReleaseDate.ToShortDateString()</small>
                    </div>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@article.Id" asp-route-title="@article.Title.ToFriendlyUrl()">Read more</a>

                </li>
            }
        </ul>
    </div>
</div>

@if (Model.TotalArticles >= Model.Articles.Count())
{
    <div class="text-center">
    <ul class="pagination">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" asp-route-page="@Model.PreviousPage"  aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage==i?"active":string.Empty)"><a class="page-link" asp-route-page="@i">@i</a></li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" asp-route-page="@Model.NextPage"  aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
    </div>
}
